@using EntityLayer.Concrete;
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class=" table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td><a href="/AdminCatgeory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td> 
            @*//her bir butona ayrı bir id gönderip  sil işlemi gerçekleşmiş oldu*@
            <td><a href="/AdminCatgeory/EditCategory/@item.CategoryID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="#" class="btn btn-info">Başlıklar</a></td>
        </tr>

    }
</table>
<a href="/AdminCatgeory/AddCategory" class="btn btn-info">YENİ KATEGORİ</a>
